//Entradas
//#define CanalCamara
//#define ObsAdel
//#define ObsAtr
//#define ObsDer
//#define ObsIzq

//Salidas
//#define MotD 
//#define MotI


// varaibles globales
int obs;        //Obstaculos
int objP;       //Posición de la pelota
boolean limC = false;       //Detección de límite de cancha

void setup() {
  // put your setup code here, to run once:
  //  Entradas
  
}

void loop() {
  // put your main code here, to run repeatedly:
  
  //Modo Búsqueda
  Busqueda:
    while(objP == 3){   //si no se detectan pelotas
      goto giroDer;        //girar derecha
      goto lecSens;        //leer sensores
    }
    while(objP == 1){   //Pelota a la derecha
      goto giroDer;        //girar derecha
      goto lecSens;        //leer sensores     
    }
    while(objP == 2){   //Pelota a la izquierda
      goto giroIzq;        //girar izquierda
      goto lecSens;        //leer sensores 
    }
    if(objP == 0){    //Pelota centrada
      goto Navegacion;
    }

  //Módo navegación
  Navegacion:
    goto lecSens;      //leer sensores
    goto adelante;       //Avanzar hacia adelante

  //Modo Obstáculos
  Obstaculos:
    if(obs == 1){     //Obstáculo a la derecha
      goto giroIzq;      //girar izquierda
      goto lecSens;      //leer sensores
    }
    if(obs == 2){     //Obstáculo a la izquierda
      goto giroIzq;      //girar derecha
      goto lecSens;      //leer sensores
    }
    if(obs == 3){     //Obstáculo al frente
      goto giroDer;      //girar derecha
      goto lecSens;      //leer sensores
    }
    if(obs == 4){     //Obstáculo a la derecha
      goto giroDer;      //girar derecha
      goto lecSens;      //leer sensores
    }
    if(limC){
      goto atras;
      goto giroIzq;
      goto lecSens;
      goto Busqueda;
    }

  lecSens:
    if(limC || (obs =! 0)){
      goto Obstaculos;
    }

  giroDer:
  
  giroIzq:
    
  adelante:  
  
  atras:
  
  detener:
  

}
